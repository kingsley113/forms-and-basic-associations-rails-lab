<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
	<%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
	<%= f.label :genre %>
	<%= f.collection_select :genre_id, Genre.all, :id, :name %><br>
	<!--makes selection bos, param   , obj ref  , table column, text to display -->
	<%= f.label :notes %><br>
	<input id="song_notes_1" name="song[notes_ids][]"><br>
	<input id="song_notes_2" name="song[notes_ids][]"><br>
	<input id="song_notes_3" name="song[notes_ids][]">
  <br />

  <%= f.submit %>
<% end %>


